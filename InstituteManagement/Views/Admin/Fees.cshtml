
@{
    ViewBag.Title = "Fees";
}

<!------ Include the above in your HEAD tag ---------->
<!DOCTYPE html>
<html lang="en">
<head>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#mytable #checkall").click(function () {
                if ($("#mytable #checkall").is(':checked')) {
                    $("#mytable input[type=checkbox]").each(function () {
                        $(this).prop("checked", true);
                    });

                } else {
                    $("#mytable input[type=checkbox]").each(function () {
                        $(this).prop("checked", false);
                    });
                }
            });
    </script>
</head>
<body>
    <div class="jumbotron">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h3>All Fees</h3>
                    <button class="btn btn-success" data-title="Create" data-toggle="modal" data-target="#create">Add Fees</button>
                    <div class="table-responsive">

                        <table id="mytable" class="table table-striped table-responsive">
                            <thead class="thead-dark">
                            <th scope="col">Student ID </th>
                            <th scope="col">Student Name </th>
                            <th scope="col">Collection Date</th>
                            <th scope="col">Payment Method</th>
                            <th scope="col">Payment Status</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Mohsin</td>
                                    <td>Commerce</td>
                                    <td>Mohsin</td>
                                    <td>Commerce</td>
                                    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                                    <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                                </tr>
                            </tbody>

                        </table>
                        <div class="clearfix"></div>
                        <ul class="pagination pull-right">
                            <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                        </ul>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--Dialog for create course-->
    <form data-toggle="validator" role="form">
        <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        <h4 class="modal-title custom_align" id="Heading">Course Details</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Enter Student ID" name="studId" required />

                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="first" placeholder="Enter Student Name" name="studname" required>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label for="text">Department/Class</label>
                                <select class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                    <option class="dropdown-item" href="#">leave 1</option>
                                    <option class="dropdown-item" href="#">leave 2</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="amount" placeholder="Enter Amount" required>

                        </div>

                        <div class="form-group">
                            <div>
                                <input type='datetime' class="form-control" id='datetimepicker' placeholder="Collection Date" required />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="text">Payment Method</label>
                            <select class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                <option class="dropdown-item" href="#">Select</option>
                                <option class="dropdown-item" href="#">Cash</option>
                                <option class="dropdown-item" href="#">Cheque</option>
                                <option class="dropdown-item" href="#">Credit Card</option>
                                <option class="dropdown-item" href="#">Debit Card</option>
                                <option class="dropdown-item" href="#">NetBanking</option>
                                <option class="dropdown-item" href="#">Other</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="text">Payment Status</label>
                            <select class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                <option class="dropdown-item" href="#">Select</option>
                                <option class="dropdown-item" href="#">Paid</option>
                                <option class="dropdown-item" href="#">Unpaid</option>
                                <option class="dropdown-item" href="#">Pending</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="address" placeholder="Enter Address" name="addr" required></textarea>

                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="submit" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Create</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!--Dialog for Edit course-->
        <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Enter Student ID" name="studId" required />

                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="first" placeholder="Enter Student Name" name="studname" required>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label for="text">Department/Class</label>
                                <select class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                    <option class="dropdown-item" href="#">leave 1</option>
                                    <option class="dropdown-item" href="#">leave 2</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="amount" placeholder="Enter Amount" required>

                        </div>

                        <div class="form-group">
                            <div>
                                <input type='datetime' class="form-control" id='datetimepicker' placeholder="Collection Date" required />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="text">Payment Method</label>
                            <select class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                <option class="dropdown-item" href="#">Select</option>
                                <option class="dropdown-item" href="#">Cash</option>
                                <option class="dropdown-item" href="#">Cheque</option>
                                <option class="dropdown-item" href="#">Credit Card</option>
                                <option class="dropdown-item" href="#">Debit Card</option>
                                <option class="dropdown-item" href="#">NetBanking</option>
                                <option class="dropdown-item" href="#">Other</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="text">Payment Status</label>
                            <select class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                <option class="dropdown-item" href="#">Select</option>
                                <option class="dropdown-item" href="#">Paid</option>
                                <option class="dropdown-item" href="#">Unpaid</option>
                                <option class="dropdown-item" href="#">Pending</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="address" placeholder="Enter Address" name="addr" required></textarea>

                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="submit" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Update</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

        <!--Dialog for delete-->
        <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Fees Record?</div>
                    </div>
                    <div class="modal-footer ">
                        <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </form>
</body>
</html>







                                <option class="dropdown-item" href="#">Adhar Card</option>
                                <option class="dropdown-item" href="#">Pan Card</option>
                                <option class="dropdown-item" href="#">Voting Card</option>
                                <option class="dropdown-item" href="#">Driving Licence</option>
                            </select>
                        </div>

                        
                        <div class="form-group">
                            <label for="text">Department</label>
                            <select class="btn btn-info dropdown-toggle dropdown-toggle-split" id="editdepartment" data-toggle="dropdown" required>
                                <option class="dropdown-item" href="#">Select </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="add">Profile Picture</label>
                            <input type="file" name="img[]" class="file" id="editphoto" required>
                        </div>

                        <div class="form-group">
                            <label for="text">Blood Group</label>
                            <select class="btn btn-info dropdown-toggle dropdown-toggle-split" id="editbloodGrpOps" data-toggle="dropdown" required>
                                <option>Select</option>
                                <option>A-ve</option>
                                <option>A+ve</option>
                                <option>B-ve</option>
                                <option>B+ve</option>
                                <option>O-ve</option>
                                <option>O+ve</option>
                                <option>AB-ve</option>
                                <option>AB+ve</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="submit" class="btn btn-warning btn-lg" onclick="UpdateStudent()" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Update</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

        <!--Dialog for delete-->
        <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" onclick="DeleteStudent()" aria-hidden="true"></span></button>

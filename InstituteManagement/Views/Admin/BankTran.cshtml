    <!--Dialog for create course-->
    <form data-toggle="validator" role="form">
        <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        <h4 class="modal-title custom_align" id="Heading">Bank Details</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="text">Bank Name</label>
                            <select class="btn btn-info dropdown-toggle dropdown-toggle-split" id="bankname" data-toggle="dropdown" required>
                                <option class="dropdown-item" href="#">Select</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="input">Transaction Type</label>
                            <label class="radio"><input type="radio" class="radio" id="credit" name="gender_option">Credit</label>
                            <label class="radio"><input type="radio" class="radio" id="debit" name="gender_option">Debit</label>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Enter Amount" id="amount" required />
                        </div>

                        <div class="form-group">
                            <input type="datetime" class="form-control" placeholder="Enter Date Of Transaction" id="trandate" required />
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Enter Transaction DoneBy" id="trandone" required />
                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="submit" onclick="CreateBankTran()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Create</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>



@{
    ViewBag.Title = "Teacher";
    Layout = "~/Views/Admin/Dashboard.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form">
                <h2>Add Teacher Info</h2>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-4">
                        <div class="form-group">
                            <input type="text" name="first_name" id="fname" class="form-control input-lg" placeholder="First Name" tabindex="1" required>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-4">
                        <div class="form-group">
                            <input type="text" name="middle_name" id="mname" class="form-control input-lg" placeholder="middle Name" tabindex="2" required>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-4">
                        <div class="form-group">
                            <input type="text" name="last_name" id="lname" class="form-control input-lg" placeholder="Last Name" tabindex="3" required>
                        </div>
                    </div>
                </div>


                <div class="container">
                    <div class="row">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="form-group">
                                    <input type="email" id="email" class="form-control" placeholder="Enter Email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <input type='datetime' class="form-control" placeholder="Enter Joining Date" id='datetimepicker' required />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Enter Password" name="password" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Comfirm Password" name="Confirm" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Enter Designation" name="Designation" required>
                                </div>
                                <div class="form-group">
                                    <label for="text">Department</label>
                                    <select class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                        <option class="dropdown-item" href="#">Select </option>
                                        <option class="dropdown-item" href="#">Link 1</option>
                                        <option class="dropdown-item" href="#">Link 2</option>
                                        <option class="dropdown-item" href="#">Link 3</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="input">Gender</label>
                                    <label class="radio"><input type="radio" id="" name="option1">Male</label>
                                    <label class="radio"><input type="radio" id="" name="option2">Female</label>
                                </div>
                                <div class="form-group">
                                    <input type='datetime' class="form-control" placeholder="Date Of Birth" id='datetimepicker' required />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                <div class="form-group">
                                    <input type="number" id="contactno" class="form-control" placeholder="Enter Mobile No" required>
                                </div>
                                <div class="form-group">
                                    <input type="number" id="emergencyno" class="form-control" placeholder="Enter Emergency No" required>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" id="address" placeholder="Enter Address" name="addr" required></textarea>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="city" placeholder="Enter City" name="city" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="pin" placeholder="Enter Pin Code" name="pin" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="country" placeholder="Enter Country" name="country" required>
                                </div>
                                <div class="form-group">
                                    <label for="add">Profile Picture</label>
                                    <input type="file" name="img[]" class="file" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="designation" placeholder="Enter Education" name="education" required>
                                </div>
                                <div class="form-group">
                                    <label for="text">Blood Group</label>
                                    <select id="selectbloodgroup" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" required>
                                        <option>Select</option>
                                        <option>A-ve</option>
                                        <option>A+ve</option>
                                        <option>B-ve</option>
                                        <option>B+ve</option>
                                        <option>O-ve</option>
                                        <option>O+ve</option>
                                        <option>AB-ve</option>
                                        <option>AB+ve</option>
                                    </select>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" id="resume1" required>Is Resume
                                    </label>
                                    <input type="file" name="img[]" class="file" id="file1">
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="IsActive">Active
                                    </label>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="IsDelete">Delete
                                    </label>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="IsDelete"> Remember me
                                    </label>
                                </div>
                            </div>
                            <div class="modal-footer ">
                                <button type="submit" class="btn btn-warning btn-lg" onclick="onClick()" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Create</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
            </form>
            </div>
        </div>
    </div>

